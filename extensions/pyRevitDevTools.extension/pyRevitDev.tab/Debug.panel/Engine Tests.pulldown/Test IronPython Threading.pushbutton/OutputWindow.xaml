<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Output Window"
        Width="400"
        SizeToContent="Height"
        Closing="window_closing">
    <StackPanel>
        <TextBlock x:Name="ThreadId_TextBlock" Text="Thread Id: 0" Padding="5"/>
        <ProgressBar x:Name="pbar1" Height="30" IsIndeterminate="True"/>
        <ProgressBar x:Name="pbar2" Height="30"/>
        <TextBox x:Name="console" IsReadOnly="True"/>
    </StackPanel>
</Window>
